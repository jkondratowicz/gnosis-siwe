{
  "name": "backend",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "setup": "yarn db:migrate",
    "dev": "tsx --watch --conditions=development src/index.ts | pino-pretty",
    "start": "node build/index.js",
    "type-check": "tsc --noEmit --pretty",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "lint:fix": "yarn lint:prettier -w && yarn lint:eslint --fix",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint . --max-warnings=0",
    "db:migrate": "npx dbmate wait && npx dbmate -d src/db/migrations up",
    "db:rollback": "npx dbmate wait && npx dbmate -d src/db/migrations down",
    "db:reset": "npx dbmate wait && npx dbmate drop && yarn db:migrate",
    "db:migration": "npx dbmate -d src/db/migrations new",
    "db:generateTypes": "npx kysely-codegen --dialect postgres --camel-case --out-file src/db/types.gen.ts"
  },
  "type": "module",
  "devDependencies": {
    "@types/cors": "^2",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "dbmate": "^2.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "kysely-codegen": "^0.15.0",
    "pino-pretty": "^11.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "kysely": "^0.27.3",
    "pg": "^8.11.5",
    "pino-http": "^10.1.0",
    "zod": "^3.23.8"
  }
}
